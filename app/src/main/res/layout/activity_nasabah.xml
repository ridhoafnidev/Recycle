<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.NasabahActivity">

    <TextView
        android:text="Pendaftaran Nasabah"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Form Pendaftaran Nasabah"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etNama"
        android:layout_margin="10dp"
        android:hint="Nama Lengkap"
        android:padding="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etNomor"
        android:layout_margin="10dp"
        android:hint="NIK/NIM"
        android:padding="11dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_margin="10dp"
        android:hint="Email"
        android:padding="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_margin="10dp"
        android:hint="Password"
        android:padding="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/rgJK"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbPria"
            android:text="Laki-laki"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rbWanita"
            android:text="Perempuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <EditText
        android:id="@+id/etTmptLahir"
        android:layout_margin="10dp"
        android:hint="Tempat Lahir"
        android:padding="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etTgl"
            android:layout_margin="10dp"
            android:hint="Tanggal Lahir"
            android:padding="11dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/date"
            android:text="Pilih Tanggal"
            android:padding="11dp"
            android:layout_width="170dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/spAgama"
        android:padding="10dp"
        android:entries="@array/spAgama"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/etNomorHp"
        android:layout_margin="10dp"
        android:hint="Nomor Handphone"
        android:padding="11dp"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnDaftar"
        android:text="Daftar"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:background="#03DAC5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</LinearLayout>